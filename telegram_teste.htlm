      text-decoration: none;
      position: relative;
      overflow: hidden;
    }
    
    .cta-button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s ease;
    }
    
    .cta-button:hover::before {
      left: 100%;
    }
    
    .cta-button:hover {
      transform: translateY(-2px);
      box-shadow: 
        0 12px 32px rgba(255, 77, 166, 0.4),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
    }
    
    .cta-button:active {
      transform: translateY(0);
    }
    
    /* Badge inferior */
    .bottom-badge {
      text-align: center;
    }
    
    .badge {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background: rgba(255, 77, 166, 0.1);
      border: 1px solid rgba(255, 77, 166, 0.2);
      color: #ff4da6;
      padding: 12px 24px;
      border-radius: 100px;
      font-size: 0.875rem;
      font-weight: 600;
    }
    
    /* Telegram icon animation */
    @keyframes telegram-pulse {
      0%, 100% { transform: scale(1); }
